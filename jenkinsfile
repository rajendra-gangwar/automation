pipeline {
    agent any
    triggers {
        pollSCM('* * * * *') // Example cron syntax for polling every minute
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Generate Jobs') {
            steps {
                script {
                    def jobDSLScript = readFile('jobs/build.groovy')
                    jobDsl(scriptText: jobDSLScript, removedJobAction: 'DELETE', removedViewAction: 'DELETE')
                }
            }
        }
    }
}
